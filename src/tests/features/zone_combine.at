forward: no
masquerade: no
forward-ports:
source-ports:
icmp-blocks:
rich rules:
])
FWD_CHECK([--permanent --zone combined/zone2 --list-all | TRIM_WHITESPACE], 0, [dnl
combined/zone2
target: default
ingress-priority: 0
egress-priority: 0
icmp-block-inversion: no
interfaces:
