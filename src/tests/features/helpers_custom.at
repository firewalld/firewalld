])
IP6TABLES_LIST_RULES([filter], [IN_public_allow], 0, [dnl
    ACCEPT 6 -- ::/0 ::/0 tcp dpt:22 
    ACCEPT 17 -- ::/0 fe80::/64 udp dpt:546 
    ACCEPT 6 -- ::/0 ::/0 tcp dpt:2121 
])

